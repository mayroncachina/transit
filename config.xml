<?xml version='0.239' encoding='utf-8'?>
<widget id="br.com.transit.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>TRANSIT</name>
    <description>
        TRANSIT
    </description>
    <author email="mayron@cachina.com.br" href="http://www.cachina.com.br">
        Mayron Cachina
    </author>

   <preference name="permissions" value="none" />
    <preference name="phonegap-version" value="3.5.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />

    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.camera"  />
    <gap:plugin name="org.apache.cordova.network-information" />

    <icon src="images/android/icon.png" />

    <icon gap:platform="android" gap:qualifier="ldpi" src="images/android/android/icon-36-ldpi.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="images/android/android/icon-48-mdpi.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="images/android/android/icon-72-hdpi.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="images/android/android/icon-96-xhdpi.png" />

    <gap:splash gap:platform="android" gap:qualifier="port-ldpi" src="res/screen/320x480.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-mdpi" src="res/screen/640x940.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-hdpi" src="res/screen/640x1136.png" />
    <gap:splash gap:platform="android" gap:qualifier="port-xhdpi" src="res/screen/640x1136.png" />

    <access origin="*" />
</widget>
